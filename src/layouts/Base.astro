---
import Header from "@components/Header.astro";
import Hero from "@components/Hero.astro";
import FeaturedVideos from "@components/FeaturedVideos.astro";
import Footer from "@components/Footer.astro";
import config from "@config/config.json";

import "@styles/global.css";

export interface Props {
  title?: string;
  meta_title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  canonical?: string;
  blogpost?: boolean;
}

const { title, meta_title, description, noindex, blogpost, image } = Astro.props;

// Default og image path
const ogImage = image ? image : `${config.site.base_url}/og.png`;

let finalTitle = meta_title ? meta_title : title ? title : config.site.title;
if (!finalTitle.includes("Kuzu")) {
  finalTitle = finalTitle + " | Kuzu";
}
---

<!doctype html>
<html lang={config.site.lang}>
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" href={config.site.favicon} />
    <!-- theme meta -->
    <meta name="theme-name" content="bookworm-light-astro" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#fff"
    />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <!-- responsive meta -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5"
    />

    <title>{finalTitle}</title>
    <meta name="title" content={finalTitle} />
    <link
      rel="canonical"
      href={`${config.site.base_url}/${Astro.url.pathname.replace("/", "")}`}
      item-prop="url"
    />
    <link rel="alternate" type="application/rss+xml" title="RSS" href={`${config.site.base_url}/rss.xml`} />
    <link rel="sitemap" href={`${config.site.base_url}/sitemap-index.xml`} />
    {noindex && <meta name="robots" content="noindex,nofollow" />}
    <meta
      name="description"
      content={description ? description : config.metadata.meta_description}
    />
    <!-- author from config.json -->
    <meta name="author" content={config.metadata.meta_author} />
    <!-- og-title -->
    <meta
      property="og:title"
      content={finalTitle}
    />
    <!-- og-description -->
    <meta
      property="og:description"
      content={description ? description : config.metadata.meta_description}
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`${config.site.base_url}/${Astro.url.pathname.replace("/", "")}`}
    />
    <!-- og-image -->
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="128" />
    <meta property="og:image:height" content="128" />
    <!-- twitter-image -->
    <meta name="twitter:image" content={ogImage} />
    <!-- twitter-title -->
    <meta name="twitter:title" content={finalTitle} />
    <!-- twitter-description -->
    <meta
      name="twitter:description"
      content={description ? description : config.metadata.meta_description}
    />
    <meta name="twitter:card" content="summary_large_image" />
    <script src="/reb2b.js" is:inline></script>
  </head>
  <body class="bg-white dark:bg-zinc-900/95">
    <Header />
    {!blogpost && <Hero />}
    <main class="mx-auto max-w-screen-lg px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
      <slot />
    </main>
    {!blogpost && config.features.youtube && <FeaturedVideos />}
    <Footer />
    <script>
      // This is a hack to get vite-plugin-pwa to generate a sw.js file.
      // Do not remove this script tag.
    </script>
  </body>
</html>
