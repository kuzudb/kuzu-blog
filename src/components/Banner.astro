<div id="top-banner" class="w-full bg-orange-500/30 flex flex-row items-center justify-between px-10 py-1 sticky top-0 z-[100] gap-4 min-h-[2.5rem] text-white text-sm hidden">
  <div class="flex-1 flex justify-center items-center text-center">
    <a href="https://kuzudb.com/product" class="flex items-center justify-center font-medium min-w-0 text-center text-inherit no-underline hover:underline" target="_blank" rel="noopener noreferrer">
      <span class="ml-2 text-zinc-700 dark:text-zinc-200 text-sm animate-pulse whitespace-nowrap overflow-hidden text-ellipsis max-w-full inline-block">
        ⭐ Join our Enterprise Edition Waitlist →
      </span>
    </a>
  </div>
  <button id="close-banner" aria-label="Close banner" class="bg-none border-none text-zinc-400 dark:text-zinc-200 text-base cursor-pointer self-center ml-2 hover:text-white">&times;</button>
</div>
<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const banner = document.getElementById('top-banner');
    const closeButton = document.getElementById('close-banner');
    if (!banner || !closeButton) return;
    if (localStorage.getItem('kuzuBannerClosed') !== 'true') {
      banner.classList.remove('hidden');
    }

    if (localStorage.getItem('kuzuBannerClosed') === 'true') {
      banner.style.display = 'none';
      return;
    }
    closeButton.addEventListener('click', () => {
      banner.style.display = 'none';
      localStorage.setItem('kuzuBannerClosed', 'true');
    });
    window.addEventListener('scroll', () => {
      if (localStorage.getItem('kuzuBannerClosed') === 'true') return;
      if (window.scrollY > 0) {
        banner.style.display = 'none';
      } else {
        banner.style.display = '';
      }
    });
  });
</script> 